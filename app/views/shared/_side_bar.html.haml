.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__left
          = link_to new_group_path do
            =fa_icon 'pencil-square-o',class:'icon'
        %li.side-header__box__menu__right
          = link_to edit_user_path(current_user) do
            =fa_icon 'cog',class:'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。

.chat-main
  .main-header
    .main-header__left
      .main-header__left__group
        sample
      .main-header__left__member
        = current_user.name
    .main-header__edit-btn
      Edit

  .messages
    .message
      .message__top
        .message__top__name
          yusuke
        .message__top__date
          2019/11/05(Tue)17:14:34
      .message__text
        頑張りましょう！
    .message
      .message__top
        .message__top__name
          montani
        .message__top__date
          2019/11/05(Tue)16:17:39
      .message__text
        hello world

  .form
    .input-box
      %input.input-text{name:"text", placeholder:"Type a message",type:"text"}/
      .image
        = fa_icon 'instagram'
      %input.input-btn{name:"submit", value:"Send", type:"submit"}/
  